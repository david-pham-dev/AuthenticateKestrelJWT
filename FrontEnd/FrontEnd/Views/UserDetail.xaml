<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FrontEnd.Views.UserDetail"
             BackgroundColor="White"
             Title="User Details">

    <VerticalStackLayout Padding="30" Spacing="20">

        <Label Text="User Details"
               FontSize="30"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <Label Text="Name:"
               FontSize="18"
               FontAttributes="Bold"
               TextColor="Black"/>
        <Label x:Name="nameLabel"
               FontSize="18"
               TextColor="Black"/>

        <Label Text="Email:"
               FontSize="18"
               FontAttributes="Bold"
               TextColor="Black"/>
        <Label x:Name="emailLabel"
               FontSize="18"
               TextColor="Black"/>

        <Button Text="Logout"
                BackgroundColor="Red"
                TextColor="White"
                FontSize="18"
                HeightRequest="50"/> <!--add Logout method  here-->

    </VerticalStackLayout>
</ContentPage>
